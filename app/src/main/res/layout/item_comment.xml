<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView_comment_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/loding"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView_comment_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글 내용입니다."
                android:textSize="14sp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_comment_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/heart"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/textView_comment_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아요 수"
                android:textSize="12sp"
                android:layout_marginEnd="15dp"/>

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">


        <TextView
            android:id="@+id/textView_comment_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답글 달기"
            android:textColor="#888888"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
